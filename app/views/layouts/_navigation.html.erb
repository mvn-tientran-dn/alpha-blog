<div class="navbar">
  <div class="section-wrapper">

    <div class="brand"><%= link_to 'Alpha blog', root_path %></div>

    <ul class="menu main-navigation">
      <li class="menu__item"><%= link_to 'About', about_path %></li>
      <li class="menu__item"><%= link_to 'Articles', articles_path %></li>
      <li class="menu__item"><%= link_to 'Categories', categories_path %></li>
      <li class="menu__item"><%= link_to 'Bloggers', users_path %></li>

      <% if logged_in? %>
        <% profile_link_text = current_user.admin? ? "Your Profile (admin)" : "Your Profile" %>
        <li class="menu__item"><%= link_to profile_link_text, user_path(current_user) %></li>
        <li class="menu__item"><%= link_to 'Log out', logout_path, method: :delete, class: "button button-primary" %></li>
      <% else %>
        <li class="menu__item"><%= link_to 'Log in', login_path, class: "button button-primary" %></li>
        <li class="menu__item"><%= link_to 'Sign up', signup_path, class: "button button-primary" %></li>
      <% end %>

    </ul>

  </div>
</div>